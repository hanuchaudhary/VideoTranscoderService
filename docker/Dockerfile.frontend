FROM node:20-alpine

WORKDIR /usr/src/app
ARG DATABASE_URL

COPY package.json pnpm-lock.yaml turbo.json pnpm-workspace.yaml ./

COPY ./packages ./packages
COPY ./apps/frontend ./apps/frontend

RUN npm i -g pnpm

RUN pnpm install
RUN ${DATABASE_URL} pnpm db:push

RUN pnpm run build

EXPOSE 3000

CMD ["pnpm", "start:frontend"]
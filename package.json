{
  "name": "video_transcoding_service",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:backend": "cd apps/backend && pnpm dev",
    "dev:frontend": "cd apps/frontend && pnpm dev",
    "start:backend": "cd apps/backend && pnpm start",
    "start:frontend": "cd apps/frontend && pnpm start",
    "db:push": "cd packages/database && pnpm db:push",
    "db:migrate": "cd packages/database && pnpm db:migrate",
    "db:generate": "cd packages/database && pnpm db:generate",
    "db:studio": "cd packages/database && pnpm db:studio",
    "build:backend": "cd apps/backend && pnpm build",
    "build:frontend": "cd apps/frontend && pnpm build"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
